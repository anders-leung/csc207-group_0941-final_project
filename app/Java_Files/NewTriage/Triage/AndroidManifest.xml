            android:name="com.example.triage.VitalsActivity"
            android:label="@string/title_activity_pastvitals" >
        </activity>
        <activity
            android:name="com.example.triage.UserActivity"
            android:label="@string/title_activity_user" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.triage.NewPatientActivity"
            android:label="@string/title_activity_new_patient" >
        </activity>
        <activity
            android:name="com.example.triage.UrgencyListActivity"
