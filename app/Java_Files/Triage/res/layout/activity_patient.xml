<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PatientActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:text="Name: " />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:textSize="20dp"
        android:layout_marginTop="12dp"
        android:text="Date of Birth: " />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="12dp"
        android:textSize="20dp"
        android:text="Health Card Number: " />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:textSize="20dp"
        android:layout_marginTop="12dp"
        android:text="Arrival Time: " />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:text="Temperature: " />
        
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:textSize="20dp"
        android:layout_marginTop="12dp"
        android:text="Blood Pressure: " />
    
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:textSize="20dp"
        android:layout_marginTop="12dp"
        android:text="Heart Rate: " />	
    
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:textSize="20dp"
        android:layout_marginTop="12dp"
        android:text="Time Vitals Taken: " />	
            
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView1"
        android:textSize="20dp"
        android:text="test" />

    <TextView
        android:id="@+id/textViewDob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:textSize="20dp"
        android:text="test" />
    
    <TextView
        android:id="@+id/textViewHealthcardnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:textSize="20dp"
        android:text="test" />    

    <TextView
        android:id="@+id/textViewTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:textSize="20dp"
        android:text="test" />    
    
    <TextView
        android:id="@+id/textViewBloodpressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:textSize="20dp"
        android:text="test" />    
 
    <TextView
        android:id="@+id/textViewHeartrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:textSize="20dp"
        android:text="test" />

    <EditText
        android:id="@+id/editTextArrivaltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewArrivaltime"
        android:layout_toRightOf="@+id/textViewArrivaltime"
        android:ems="10"
        android:height="20dp"/>

    <EditText
        android:id="@+id/editTextTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textViewTemperature"
        android:layout_alignBottom="@+id/textViewTemperature"
        android:ems="10"
        android:height="20dp"/>

<EditText
        android:id="@+id/editTextBloodpressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textViewBloodpressure"
        android:layout_alignBottom="@+id/textViewBloodpressure"
        android:ems="10"
        android:height="20dp"/>

<EditText
        android:id="@+id/editTextHeartrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textViewHeartrate"
        android:layout_alignBottom="@+id/textViewHeartrate"
        android:ems="10"
        android:height="20dp"/>

    <TextView
        android:id="@+id/textViewVitaltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="12dp"
        android:text="test"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editTextVitaltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewVitaltime"
        android:layout_toRightOf="@+id/textViewVitaltime"
        android:ems="10"
        android:height="20dp" />

    <TextView
        android:id="@+id/textViewArrivaltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="12dp"
        android:layout_alignLeft="@+id/textView4"
        android:text="test"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonPastarrivaltimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="View Arrival Times" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Save" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonPastvitals"
        android:layout_toLeftOf="@+id/buttonPastvitals"
        android:layout_marginRight="5dp"
        android:onClick="goBack"
        android:text="Back" />

</RelativeLayout>
